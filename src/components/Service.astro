---
export interface Props {
	title: string;
	description: string;
	icon: string;
	url?: string;
}

const {title, description, icon, url} = Astro.props;
---
<div class="md:odd:border-r-2 border-t-2 py-12 text-center px-4 cursor-default">
    <div
        class="flex items-center justify-center w-20 h-20 mx-auto mb-4 text-center bg-gray-200 rounded-full"
    >
        <img class="w-10 h-10" src={icon} />
    </div>
    <h4 class="text-primary text-lg font-sans tracking-wider mb-2">{title}</h4>
    <p class="text">{description}</p>
    <p class="mt-4">
        <a class="link-primary link-hover" href={url}
            >Scopri di pi√∫</a
        >
    </p>
</div>
